doctype html
html
  head
    title Passport Local Mongoose Login Example
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')

    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/custom.css')
    link(rel='stylesheet', href='/font-awesome-4.7.0/css/font-awesome.min.css')
    
    
    
    block scripts
      
      script(src='/js/jquery.min.js')
      
      script(src='/js/bootstrap.min.js')
      
      


  body
     nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
        a.navbar-brand(href="/review") Review Locations
        ul.navbar-nav
          if (typeof(user)=="undefined")
            li.nav-item.active
              a.nav-link(href='/register') Register
            li.nav-item
              a.nav-link(href='/login') LogIn
          else
            li.nav-item.active
              a.nav-link(href=`/update/${user._id}`) #{user.firstname}'s 
            li.nav-item.active
              a.nav-link(href='/location') AddLocation
            li.nav-item.active
              a.nav-link(href='/logout') LogOut
            if (user.Admin)
               li.nav-item.active
                 a.nav-link(href='/admin') Admin Panel 
              
  .container

    block content
  script(src="/js/script.js")




